<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Manage Phrases</h6>
        <button class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-2"></i>Add New Phrase
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="phrasesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Phrase</th>
                        <th>Difficulty</th>
                        <th>Formality</th>
                        <th>Tags</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>¡Más te vale!</td>
                        <td><span class="badge bg-warning">intermediate</span></td>
                        <td><span class="badge bg-secondary">informal</span></td>
                        <td>
                            <span class="badge bg-info me-1">warning</span>
                            <span class="badge bg-info me-1">threat</span>
                            <span class="badge bg-info">advice</span>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">API Endpoints</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h6>Get Phrases</h6>
                <code>GET /api/v1/phrases?level=beginner</code>
                <br>
                <small class="text-muted">Parameters: level (beginner|intermediate)</small>
            </div>
            <div class="col-md-6">
                <h6>Get Specific Phrase</h6>
                <code>GET /api/v1/phrases/:id</code>
                <br>
                <small class="text-muted">Get phrase by ID</small>
            </div>
        </div>
    </div>
</div>
